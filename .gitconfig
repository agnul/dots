[user]
	name = agnul
	email = agnul@hideinyourshell.net
[core]
	editor = vim
	pager = less
[alias]
	ci = commit
	st = status -s
	ll = log --pretty=format:\"%C(yellow)%h  %Cgreen%ad %Cred%d %Creset%s%Cblue [%cn]\" --decorate --numstat --date=relative
	ls = log --pretty=format:\"%C(yellow)%h %Cgreen %ad %Cred%d %Creset%s%Cblue [%cn]\" --decorate --date relative
	co = checkout
	cl = clone
	br = branch
[pusdh]
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
