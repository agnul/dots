[user]
	name = Angelo Dipierro
	email = angelo.dipierro@ext.contactlab.com
[core]
	editor = vim
	pager = less
	excludesfile = ~/.gitignore
[alias]
	ci = commit
	st = status -s
	ll = log --pretty=format:\"%C(yellow)%h  %Cgreen%ad %Cred%d %Creset%s%Cblue [%cn]\" --decorate --numstat --date=relative
	ls = log --pretty=format:\"%C(yellow)%h %Cgreen %ad %Cred%d %Creset%s%Cblue [%cn]\" --decorate --date relative
	co = checkout
	cl = clone
	br = branch
	dfw = diff --ignore-all-space
	shw = show --ignore-all-space
	plog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an <%ae>%Creset' --abbrev-commit --date=relative
[pusdh]
[push]
	default = simple
[merge]
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[pull]
	rebase = true
